@import 'nib'

$white = rgb(209, 209, 209)
$black = rgb(20, 20, 20)
$blackTrans = rgba(0, 0, 0, 0.5)
$whiteTrans = rgba(255, 255, 255, 0.2)
$aqua = #49c486

body
  background-color black
  color #c7c7c7
.myContainer
  width 100%
  height 100%
.row
  margin 0
.image-container
  position absolute
  z-index -100
  padding 10px
  height 100%
  width 100%
.full-image
  height 100%
  width 100%
  background-repeat no-repeat
  background-attachment fixed
  background-position center
  background-size cover
.buttons
  margin 25px 0 0 25px
  .my-button
    margin 3px
    font-size 10px
    border-radius 3px
    background-color rgba(0, 0, 0, 0)
    border 1px solid $white
    color $white
    padding 2px 4px 2px 4px
    transition .2s
    &:hover
      border-color darken($white, 30)
      color darken($white, 30)
    &:active
      border-color $white
      color $white
    &:focus
      border-color lighten($white, 10)
      color lighten($white, 10)
      outline none
 
#uploadModal
  #fileInput
    height 0.1px
    width 0.1px
    outline: none !important
    &:focus
      outline: none !important
  label
    color $black
    background-color $aqua
    border-radius 3px
    border 1px solid $blackTrans
    padding 3px 5px 3px 5px
    transition .2s
    &:hover
      border-color $aqua
  .upload-progress
    width 0%
    height 20px
    border-radius 8px
    background-color $aqua
    margin-top 10px
  
.photo-display
  position fixed
  top 20px
  right 20px
.photo-detail-section
  padding 10px
  border-radius 2px
  background-color rgba(0, 0, 0, 0)
  color $blackTrans
  border 1px solid rgba(0, 0, 0, 0)
  transition 1s
  height 50px
  width 30%
  margin-left 70%
  overflow hidden
  .glyphicon-picture
    position absolute
    top 5px
    right 6px
    font-size 40px
    color $blackTrans
    transition .25s
  .photo-detail
    margin-top 50px
  &:hover
    border 1px solid $blackTrans
    background-color $whiteTrans
    color $black
    margin-left 0%
    height 300px
    width 100% 
    .photo-detail
      margin-top 40px
      
      
      
      
.thumbnails-area
  width 100%
  overflow-y scroll
  height 300px
  position fixed
  bottom -200px
  padding 0px 25px 0 25px
  transition .7s
  &:hover
    bottom -50px
.all-thumbnails
  height: 50px
.my_thumbnail
  height auto
  vertical-align: top;
  width 150px
  margin 0 10px 0 10px
  position relative
  display inline-block
  padding 5px
  border 1px solid $whiteTrans
  transition .25s
  button
    position absolute
    top 3px
    right 3px
  &:hover
    border 1px solid $blackTrans
.strike-through 
  text-decoration line-through
